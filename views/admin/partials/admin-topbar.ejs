<!-- Admin Top Bar -->
<header class="admin-topbar">
  <div class="admin-topbar-left">
    <!-- Mobile Menu Toggle -->
    <button class="admin-mobile-toggle d-md-none" id="sidebarToggle">
      <i class="fas fa-bars"></i>
    </button>
    
    <!-- Breadcrumb -->
    <div class="admin-breadcrumb-container">
      <h4 class="admin-breadcrumb">
        <% if (typeof breadcrumb !== 'undefined') { %>
          <%= breadcrumb %>
        <% } else { %>
          Dashboard
        <% } %>
      </h4>
      
      <!-- Optional Subtitle -->
      <% if (typeof breadcrumbSubtitle !== 'undefined') { %>
        <small class="admin-breadcrumb-subtitle"><%= breadcrumbSubtitle %></small>
      <% } %>
    </div>
  </div>
  
  <div class="admin-topbar-right">
    <!-- Search Bar (Optional) -->
    <% if (typeof showSearch !== 'undefined' && showSearch) { %>
    <div class="admin-search-container">
      <div class="admin-search-box">
        <i class="fas fa-search admin-search-icon"></i>
        <input type="text" class="admin-search-input" placeholder="Search...">
      </div>
    </div>
    <% } %>
    
    <!-- Notifications -->
    <div class="admin-notifications">
      <button class="admin-notification-btn" data-bs-toggle="dropdown">
        <i class="fas fa-bell"></i>
        <span class="admin-notification-badge">3</span>
      </button>
      
      <div class="dropdown-menu admin-notification-dropdown">
        <div class="admin-notification-header">
          <h6>Notifications</h6>
          <small>3 unread</small>
        </div>
        
        <div class="admin-notification-list">
          <div class="admin-notification-item">
            <div class="admin-notification-icon">
              <i class="fas fa-user-plus"></i>
            </div>
            <div class="admin-notification-content">
              <p>New student registration</p>
              <small>2 minutes ago</small>
            </div>
          </div>
          
          <div class="admin-notification-item">
            <div class="admin-notification-icon">
              <i class="fas fa-exclamation-triangle"></i>
            </div>
            <div class="admin-notification-content">
              <p>5 pending approvals</p>
              <small>1 hour ago</small>
            </div>
          </div>
          
          <div class="admin-notification-item">
            <div class="admin-notification-icon">
              <i class="fas fa-video"></i>
            </div>
            <div class="admin-notification-content">
              <p>Video upload completed</p>
              <small>3 hours ago</small>
            </div>
          </div>
        </div>
        
        <div class="admin-notification-footer">
          <a href="/admin/notifications" class="btn btn-sm btn-primary">View All</a>
        </div>
      </div>
    </div>
    
    <!-- User Info -->
    <div class="admin-user-info">
      <div class="admin-user-avatar">
        <%= user && user.name ? user.name.charAt(0).toUpperCase() : 'A' %>
      </div>
      <div class="admin-user-details">
        <p class="admin-user-name"><%= user ? user.name : 'Admin User' %></p>
        <small class="admin-user-role">Administrator</small>
      </div>
    </div>
    
    <!-- Theme Toggle -->
    <button class="admin-theme-toggle" onclick="toggleTheme()" title="Toggle Theme">
      <i class="fas fa-moon" id="theme-icon"></i>
    </button>
  </div>
</header>
