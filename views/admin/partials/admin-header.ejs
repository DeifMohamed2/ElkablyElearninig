<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>

  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/images/KImage.png">
  <link rel="shortcut icon" type="image/png" href="/images/KImage.png">
  <link rel="apple-touch-icon" href="/images/KImage.png">

  <!-- Preconnect to CDN origins for faster loading -->
  <link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin>
  <link rel="preconnect" href="https://cdnjs.cloudflare.com" crossorigin>
  <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin>
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

  <!-- Google Fonts - use display=swap for non-blocking -->
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&family=Poppins:wght@400;500;600;700;800&display=swap" rel="stylesheet">

  <!-- Admin Main CSS -->
  <link rel="stylesheet" href="/css/adminCSS/admin-main.css?v=<%= cacheBuster %>">

  <!-- Theme CSS -->
  <link rel="stylesheet" href="/css/theme-toggle.css?v=<%= cacheBuster %>">

  <!-- Page Specific CSS -->
  <% if (typeof pageCSS !== 'undefined' && pageCSS) { %>
  <link rel="stylesheet" href="/css/adminCSS/<%= pageCSS %>.css?v=<%= cacheBuster %>">
  <% } %>

  <!-- Additional CSS -->
  <% if (typeof additionalCSS !== 'undefined') { %>
  <% additionalCSS.forEach(function(css) { %>
  <link rel="stylesheet" href="<%= css %>?v=<%= cacheBuster %>">
  <% }); %>
  <% } %>

  <script>
    // Apply theme on page load - Enhanced version
    (function() {
      try {
        var saved = localStorage.getItem('theme') || 'light'; // Default to light theme
        var html = document.documentElement;
        var body = document.body;

        // Remove any existing theme classes
        html.classList.remove('light-theme', 'dark-theme');
        if (body) {
          body.classList.remove('light-theme', 'dark-theme');
          body.classList.add(saved + '-theme');
        }
        html.classList.add(saved + '-theme');

        // Set data attribute for consistency
        html.setAttribute('data-theme', saved);
        if (body) {
          body.setAttribute('data-theme', saved);
        }

        console.log('Theme initialized:', saved);
      } catch (e) {
        console.error('Error initializing theme:', e);
        // Fallback to light theme
        document.documentElement.classList.add('light-theme');
        if (document.body) {
          document.body.classList.add('light-theme');
        }
      }
    })();
  </script>
</head>

<body class="<%= theme %>">