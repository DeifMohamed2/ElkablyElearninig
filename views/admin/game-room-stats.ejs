<%- include('partials/admin-header', { title: 'Game Room Statistics' }) %>

<div class="admin-container">
  <div class="admin-header">
    <div class="admin-header-content">
      <h1 class="admin-title">
        <i class="fas fa-chart-bar"></i>
        Game Room Statistics
      </h1>
      <p class="admin-subtitle">Detailed analytics for "<%= gameRoom.title %>"</p>
    </div>
    <div class="admin-header-actions">
      <a href="/admin/game-rooms" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i>
        Back to Rooms
      </a>
    </div>
  </div>

  <!-- Game Room Info -->
  <div class="game-room-info-card">
    <div class="info-header">
      <div class="room-basic-info">
        <h2><%= gameRoom.title %></h2>
        <div class="room-meta">
          <span class="room-code">Room #<%= gameRoom.roomCode %></span>
          <span class="room-category"><%= gameRoom.category %></span>
          <span class="room-difficulty difficulty-<%= gameRoom.difficulty %>">
            <%= gameRoom.difficulty.charAt(0).toUpperCase() + gameRoom.difficulty.slice(1) %>
          </span>
        </div>
      </div>
      <div class="room-status">
        <div class="status-indicator status-<%= gameRoom.gameState %>">
          <div class="status-dot"></div>
          <span><%= gameRoom.gameState.charAt(0).toUpperCase() + gameRoom.gameState.slice(1) %></span>
        </div>
      </div>
    </div>

    <div class="room-stats-overview">
      <div class="stat-item">
        <div class="stat-icon">
          <i class="fas fa-users"></i>
        </div>
        <div class="stat-content">
          <span class="stat-value"><%= gameRoom.maxPlayers %></span>
          <span class="stat-label">Max Players</span>
        </div>
      </div>
      <div class="stat-item">
        <div class="stat-icon">
          <i class="fas fa-question-circle"></i>
        </div>
        <div class="stat-content">
          <span class="stat-value"><%= gameRoom.questions.length %></span>
          <span class="stat-label">Questions</span>
        </div>
      </div>
      <div class="stat-item">
        <div class="stat-icon">
          <i class="fas fa-clock"></i>
        </div>
        <div class="stat-content">
          <span class="stat-value"><%= gameRoom.totalTime %> min</span>
          <span class="stat-label">Total Time</span>
        </div>
      </div>
      <div class="stat-item">
        <div class="stat-icon">
          <i class="fas fa-calendar"></i>
        </div>
        <div class="stat-content">
          <span class="stat-value"><%= new Date(gameRoom.createdAt).toLocaleDateString() %></span>
          <span class="stat-label">Created</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Game Sessions Statistics -->
  <div class="sessions-stats">
    <div class="stats-header">
      <h3>Game Sessions Statistics</h3>
      <div class="stats-summary">
        <span class="total-sessions"><%= sessions.length %> Total Sessions</span>
      </div>
    </div>

    <% if (sessions.length > 0) { %>
      <!-- Performance Metrics -->
      <div class="performance-metrics">
        <div class="metric-card">
          <div class="metric-header">
            <i class="fas fa-chart-line"></i>
            <h4>Average Performance</h4>
          </div>
          <div class="metric-content">
            <div class="metric-item">
              <span class="metric-label">Average Score:</span>
              <span class="metric-value">
                <%= Math.round(sessions.reduce((sum, s) => sum + s.score, 0) / sessions.length) %>
              </span>
            </div>
            <div class="metric-item">
              <span class="metric-label">Average Accuracy:</span>
              <span class="metric-value">
                <%= Math.round(sessions.reduce((sum, s) => sum + (s.correctAnswers / s.totalQuestions * 100), 0) / sessions.length) %>%
              </span>
            </div>
            <div class="metric-item">
              <span class="metric-label">Average Time:</span>
              <span class="metric-value">
                <%= Math.round(sessions.reduce((sum, s) => sum + s.timeSpent, 0) / sessions.length) %>s
              </span>
            </div>
          </div>
        </div>

        <div class="metric-card">
          <div class="metric-header">
            <i class="fas fa-trophy"></i>
            <h4>Top Performers</h4>
          </div>
          <div class="metric-content">
            <% const topSessions = sessions.slice(0, 3); %>
            <% topSessions.forEach((session, index) => { %>
              <div class="top-performer">
                <div class="performer-rank">
                  <% if (index === 0) { %>ðŸ¥‡<% } else if (index === 1) { %>ðŸ¥ˆ<% } else { %>ðŸ¥‰<% } %>
                </div>
                <div class="performer-info">
                  <span class="performer-name"><%= session.user.username %></span>
                  <span class="performer-score"><%= session.score %> points</span>
                </div>
              </div>
            <% }); %>
          </div>
        </div>
      </div>

      <!-- Detailed Sessions Table -->
      <div class="sessions-table-container">
        <h4>All Game Sessions</h4>
        <div class="table-wrapper">
          <table class="sessions-table">
            <thead>
              <tr>
                <th>Player</th>
                <th>Score</th>
                <th>Correct Answers</th>
                <th>Accuracy</th>
                <th>Time Spent</th>
                <th>Position</th>
                <th>Date</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% sessions.forEach(session => { %>
                <tr>
                  <td>
                    <div class="player-info">
                      <% if (session.user.profilePicture) { %>
                        <img src="<%= session.user.profilePicture %>" alt="<%= session.user.username %>" class="player-avatar">
                      <% } else { %>
                        <div class="player-avatar-fallback">
                          <%= session.user.username.charAt(0).toUpperCase() %>
                        </div>
                      <% } %>
                      <span class="player-name"><%= session.user.username %></span>
                    </div>
                  </td>
                  <td>
                    <span class="score-value"><%= session.score %></span>
                  </td>
                  <td>
                    <span class="correct-answers">
                      <%= session.correctAnswers %>/<%= session.totalQuestions %>
                    </span>
                  </td>
                  <td>
                    <div class="accuracy-bar">
                      <div class="accuracy-fill" style="width: <%= (session.correctAnswers / session.totalQuestions * 100) %>%"></div>
                      <span class="accuracy-text"><%= Math.round(session.correctAnswers / session.totalQuestions * 100) %>%</span>
                    </div>
                  </td>
                  <td>
                    <span class="time-spent"><%= session.timeSpent %>s</span>
                  </td>
                  <td>
                    <% if (session.position) { %>
                      <span class="position-badge position-<%= session.position %>">
                        <%= session.position %>
                      </span>
                    <% } else { %>
                      <span class="no-position">-</span>
                    <% } %>
                  </td>
                  <td>
                    <span class="session-date">
                      <%= new Date(session.createdAt).toLocaleDateString() %>
                    </span>
                  </td>
                  <td>
                    <span class="status-badge status-<%= session.status %>">
                      <%= session.status.charAt(0).toUpperCase() + session.status.slice(1) %>
                    </span>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    <% } else { %>
      <div class="no-sessions">
        <div class="no-sessions-icon">
          <i class="fas fa-chart-bar"></i>
        </div>
        <h4>No Game Sessions Yet</h4>
        <p>This game room hasn't been played yet. Statistics will appear here once players start competing.</p>
      </div>
    <% } %>
  </div>
</div>

