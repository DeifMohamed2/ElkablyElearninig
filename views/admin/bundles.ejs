                  <textarea class="admin-form-control" id="bundleDescription" name="description" rows="4" minlength="5" maxlength="1000"></textarea>
                  <small class="admin-form-text">Description must be between 5 and 1000 characters (optional)</small>
                  <div class="invalid-feedback" id="bundleDescriptionError"></div>
                </div>

                <div class="admin-form-group">
                  <label for="bundleShortDescription" class="admin-form-label">
                    <i class="fas fa-text-width me-2"></i>
                    Short Description (Optional)
                  </label>
                  <input type="text" class="admin-form-control" id="bundleShortDescription" name="shortDescription" minlength="3" maxlength="200">
                  <small class="admin-form-text">Short description must be between 3 and 200 characters (optional)</small>
                  <div class="invalid-feedback" id="bundleShortDescriptionError"></div>
                </div>
              </div>
            </div>

            <div class="col-md-4">
              <div class="admin-form-section">
                <h6 class="admin-form-section-title">
                  <i class="fas fa-cog me-2"></i>
                  Bundle Settings
                </h6>

                

                <div class="admin-form-group">
                  <label for="bundleCourseType" class="admin-form-label">
                    <i class="fas fa-laptop me-2"></i>
                    Course Type
