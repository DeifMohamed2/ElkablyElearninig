      }
    } else {
      const index = parseInt(trimmed) - 1;
      if (index >= 0 && index < quizQuestions.length) {
        selectedQuizQuestions.push(quizQuestions[index]._id);
        document.querySelector(`[data-question-index="${index}"]`).classList.add('selected');
