// ===== DRAG AND DROP FUNCTIONALITY =====
let draggedItem = null;

function initDragAndDrop() {
  const container = document.getElementById('modulesContainer');
  if (!container) return;

  const items = container.querySelectorAll('.module-item');
  
  items.forEach(item => {
    const card = item.querySelector('.module-card');
    
    card.addEventListener('dragstart', (e) => {
      draggedItem = item;
      item.classList.add('dragging');
      e.dataTransfer.effectAllowed = 'move';
    });

    card.addEventListener('dragend', () => {
      item.classList.remove('dragging');
      draggedItem = null;
      document.querySelectorAll('.module-item').forEach(i => i.classList.remove('drag-over'));
      saveNewOrder();
    });

    item.addEventListener('dragover', (e) => {
      e.preventDefault();
      e.dataTransfer.dropEffect = 'move';
      
      if (draggedItem && draggedItem !== item) {
        item.classList.add('drag-over');
        const rect = item.getBoundingClientRect();
        const midX = rect.left + rect.width / 2;
        const midY = rect.top + rect.height / 2;
        
        if (e.clientX < midX || e.clientY < midY) {
          item.parentNode.insertBefore(draggedItem, item);
        } else {
          item.parentNode.insertBefore(draggedItem, item.nextSibling);
        }
      }
    });

    item.addEventListener('dragleave', () => {
      item.classList.remove('drag-over');
    });

    item.addEventListener('drop', (e) => {
      e.preventDefault();
      item.classList.remove('drag-over');
    });
  });
}

async function saveNewOrder() {
  const container = document.getElementById('modulesContainer');
  if (!container) return;

  const items = container.querySelectorAll('.module-item');
  const moduleIds = Array.from(items).map(item => item.dataset.moduleId);
  
  try {
    const response = await fetch('/admin/quiz-modules/reorder', {
      method: 'PUT',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ moduleIds })
    });
    
    const result = await response.json();
    if (result.success) {
      showNotification('Module order updated', 'success');
    }
  } catch (error) {
    console.error('Error saving order:', error);
    showNotification('Failed to save order', 'error');
  }
}

