// Restore Module
async function restoreModule(moduleId) {
  try {
    const response = await fetch(`/admin/quiz-modules/${moduleId}/restore`, {
      method: 'POST',
    });
    
    const result = await response.json();
    
    if (result.success) {
      showNotification(result.message, 'success');
      loadTrashModules();
      setTimeout(() => window.location.reload(), 1500);
    } else {
      showNotification(result.message || 'Failed to restore module', 'error');
    }
  } catch (error) {
    console.error('Error restoring module:', error);
    showNotification('Failed to restore module', 'error');
  }
}

// Permanently Delete Module
async function permanentDeleteModule(moduleId) {
  if (!confirm('Are you sure you want to PERMANENTLY delete this module? This action cannot be undone!')) {
    return;
  }
  
  try {
    const response = await fetch(`/admin/quiz-modules/${moduleId}/permanent`, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json'
      }
    });
    
    const result = await response.json();
    
    if (response.ok && result.success) {
      showNotification(result.message || 'Module permanently deleted', 'success');
      // Reload the trash modules list
      await loadTrashModules();
    } else {
      showNotification(result.message || 'Failed to delete module permanently', 'error');
    }
  } catch (error) {
    console.error('Error permanently deleting module:', error);
    showNotification('Failed to delete module permanently', 'error');
  }
}

