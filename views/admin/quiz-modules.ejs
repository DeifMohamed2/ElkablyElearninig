<script>
let currentModuleId = null;

// Open Create Module Modal
function openCreateModuleModal() {
  currentModuleId = null;
  document.getElementById('moduleModalLabel').innerHTML = '<i class="fas fa-layer-group" style="margin-right: 8px; color: var(--admin-primary);"></i> Create New Module';
  document.getElementById('moduleForm').reset();
  document.getElementById('moduleId').value = '';

  
  const modal = new bootstrap.Modal(document.getElementById('moduleModal'));
  modal.show();
}

// Edit Module
async function editModule(moduleId) {
  try {
    currentModuleId = moduleId;
    
    const response = await fetch(`/admin/quiz-modules/${moduleId}/edit`);
    const html = await response.text();
    
    // For now, redirect to edit page
    window.location.href = `/admin/quiz-modules/${moduleId}/edit`;
  } catch (error) {
    console.error('Error loading module:', error);
    showNotification('Failed to load module details', 'error');
  }
}

// Save Module
async function saveModule() {
  const form = document.getElementById('moduleForm');
  const formData = new FormData(form);
  const data = Object.fromEntries(formData.entries());
  
  // Validate required fields
  if (!data.name || !data.testType) {
    showNotification('Please fill in all required fields', 'error');
    return;
  }
  
  try {
    const url = currentModuleId 
      ? `/admin/quiz-modules/${currentModuleId}` 
      : '/admin/quiz-modules/create';
    const method = currentModuleId ? 'PUT' : 'POST';
    
    const response = await fetch(url, {
      method,
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(data),
    });
    
    const result = await response.json();
    
    if (result.success) {
      showNotification(result.message, 'success');
      bootstrap.Modal.getInstance(document.getElementById('moduleModal')).hide();
      setTimeout(() => window.location.reload(), 1000);
    } else {
      showNotification(result.message || 'Failed to save module', 'error');
    }
  } catch (error) {
    console.error('Error saving module:', error);
    showNotification('Failed to save module', 'error');
  }
}

// Confirm Delete Module
function confirmDeleteModule(moduleId, moduleName) {
  currentModuleId = moduleId;
  document.getElementById('deleteModuleName').textContent = moduleName;
  
  const modal = new bootstrap.Modal(document.getElementById('deleteModuleModal'));
  document.getElementById('confirmDeleteModuleBtn').onclick = () => deleteModule(moduleId);
  modal.show();
}

// Delete Module
async function deleteModule(moduleId) {
  try {
    const response = await fetch(`/admin/quiz-modules/${moduleId}`, {
      method: 'DELETE',
    });
    
    const result = await response.json();
    
    if (result.success) {
      showNotification(result.message, 'success');
      bootstrap.Modal.getInstance(document.getElementById('deleteModuleModal')).hide();
      setTimeout(() => window.location.reload(), 1000);
    } else {
      showNotification(result.message || 'Failed to delete module', 'error');
    }
  } catch (error) {
    console.error('Error deleting module:', error);
    showNotification('Failed to delete module', 'error');
  }
}

// Toggle Trash Section
function toggleTrashSection() {
  const trashSection = document.getElementById('trashSection');
  const toggleBtn = document.getElementById('toggleTrashBtn');
  const toggleText = document.getElementById('toggleTrashText');
  
  if (trashSection.style.display === 'none') {
    trashSection.style.display = 'block';
    toggleText.textContent = 'Hide Trash';
    toggleBtn.innerHTML = '<i class="fas fa-eye-slash"></i> <span id="toggleTrashText">Hide Trash</span>';
    loadTrashModules();
  } else {
    trashSection.style.display = 'none';
    toggleText.textContent = 'Show Trash';
    toggleBtn.innerHTML = '<i class="fas fa-trash"></i> <span id="toggleTrashText">Show Trash</span>';
  }
}

// Load Trash Modules
async function loadTrashModules() {
  try {
    const response = await fetch('/admin/quiz-modules/trash');
    const data = await response.json();
    
    const container = document.getElementById('trashModulesContainer');
    
    if (data.success && data.modules && data.modules.length > 0) {
      container.innerHTML = `
        <div class="row">
          ${data.modules.map(module => `
            <div class="col-lg-4 col-md-6 mb-4">
