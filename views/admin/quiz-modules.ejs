<%- include('./partials/admin-header', { pageCSS: 'quiz-modules' }) %>

<!-- Admin Layout -->
<div class="admin-layout">
  
  <!-- Sidebar -->
  <%- include('./partials/admin-sidebar', { currentPage: currentPage }) %>
  
  <!-- Main Content -->
  <main class="admin-main">
    
    <!-- Top Bar -->
    <%- include('./partials/admin-topbar', { 
        breadcrumb: 'Quiz Modules',
        breadcrumbSubtitle: 'Organize quizzes into modules for better structure'
    }) %>
    
    <!-- Content -->
    <div class="admin-content">
      <!-- Page Header -->
      <div class="admin-dashboard-header">
        <div class="admin-dashboard-title">
          <i class="fas fa-layer-group"></i>
          Quiz Modules Management
        </div>
        <div class="admin-dashboard-subtitle">
          Create and manage modules to organize your quizzes
        </div>
      </div>

      <!-- Statistics Cards -->
      <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
          <div class="admin-stat-item">
            <div class="admin-stat-icon" style="background: linear-gradient(135deg, #6366f1, #8b5cf6);">
              <i class="fas fa-layer-group"></i>
            </div>
            <div class="admin-stat-number"><%= stats.total || 0 %></div>
            <div class="admin-stat-label">Total Modules</div>
          </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
          <div class="admin-stat-item">
            <div class="admin-stat-icon" style="background: linear-gradient(135deg, #22c55e, #16a34a);">
              <i class="fas fa-check-circle"></i>
            </div>
            <div class="admin-stat-number"><%= stats.active || 0 %></div>
            <div class="admin-stat-label">Active Modules</div>
          </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
          <div class="admin-stat-item">
            <div class="admin-stat-icon" style="background: linear-gradient(135deg, #dc2626, #b91c1c);">
              <i class="fas fa-clipboard-check"></i>
            </div>
            <div class="admin-stat-number"><%= stats.byType?.EST || 0 %></div>
            <div class="admin-stat-label">EST Modules</div>
          </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
          <div class="admin-stat-item">
            <div class="admin-stat-icon" style="background: linear-gradient(135deg, #0ea5e9, #0284c7);">
              <i class="fas fa-clipboard-list"></i>
            </div>
            <div class="admin-stat-number"><%= (stats.byType?.SAT || 0) + (stats.byType?.ACT || 0) %></div>
            <div class="admin-stat-label">SAT/ACT Modules</div>
          </div>
        </div>
      </div>

      <!-- Filters and Actions -->
      <div class="admin-filters">
        <div class="row">
          <div class="col-md-8">
            <form method="GET" class="admin-filters-form">
              <div class="admin-filters-row">
                <div class="admin-filter-group">
                  <label class="admin-filter-label">
                    <i class="fas fa-search"></i>
                    Search
                  </label>
                  <input type="text" name="search" class="admin-filter-control" placeholder="Search modules..." value="<%= filters.search || '' %>">
                </div>
                <div class="admin-filter-group">
                  <label class="admin-filter-label">
                    <i class="fas fa-filter"></i>
                    Status
                  </label>
                  <select name="status" class="admin-filter-control">
                    <option value="">All Status</option>
                    <option value="active" <%= filters.status === 'active' ? 'selected' : '' %>>Active</option>
                    <option value="inactive" <%= filters.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
                    <option value="archived" <%= filters.status === 'archived' ? 'selected' : '' %>>Archived</option>
                  </select>
                </div>
                <div class="admin-filter-group">
                  <label class="admin-filter-label">
                    <i class="fas fa-clipboard-check"></i>
                    Test Type
                  </label>
                  <select name="testType" class="admin-filter-control">
                    <option value="">All Types</option>
                    <option value="EST" <%= filters.testType === 'EST' ? 'selected' : '' %>>EST</option>
                    <option value="SAT" <%= filters.testType === 'SAT' ? 'selected' : '' %>>SAT</option>
                    <option value="ACT" <%= filters.testType === 'ACT' ? 'selected' : '' %>>ACT</option>
                  </select>
                </div>
                <div class="admin-filter-group">
                  <label class="admin-filter-label">&nbsp;</label>
                  <button type="submit" class="admin-action-btn primary">
                    <i class="fas fa-search"></i>
                    Search
                  </button>
                </div>
              </div>
            </form>
          </div>
          <div class="col-md-4">
            <div class="admin-actions">
              <button type="button" class="admin-action-btn primary" onclick="openCreateModuleModal()">
                <i class="fas fa-plus"></i>
                Create New Module
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Results Info -->
      <div class="admin-results-info" style="background: var(--admin-card-light); border: 2px solid var(--admin-border-light); border-radius: 12px; padding: 16px; margin-bottom: 24px;">
        <p class="mb-0" style="color: var(--admin-text-light); font-weight: 600;">
          <i class="fas fa-info-circle" style="color: var(--admin-primary); margin-right: 8px;"></i>
          Showing <strong><%= pagination.total %></strong> modules
          <% if (filters.search || filters.status || filters.testType) { %>
            with current filters
          <% } %>
        </p>
      </div>

      <!-- Modules Grid -->
      <% if (modules && modules.length > 0) { %>
        <div class="row" id="modulesContainer">
          <% modules.forEach((module, index) => { %>
            <div class="col-lg-4 col-md-6 mb-4 module-item" data-module-id="<%= module._id %>">
              <div class="module-card admin-slide-in" draggable="true" data-delay="<%= index * 0.1 %>" style="background: var(--admin-card-light); border: 2px solid var(--admin-border-light); border-radius: 16px; overflow: hidden; transition: all 0.3s ease; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.07); cursor: grab;">
                <!-- Module Header with Color -->
                <div class="module-card-header" style="background: var(--admin-primary); padding: 20px; position: relative;">
                  <div style="display: flex; align-items: center; justify-content: space-between;">
                    <div style="display: flex; align-items: center; gap: 12px;">
                      <div style="width: 50px; height: 50px; background: rgba(255,255,255,0.2); border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-layer-group" style="font-size: 24px; color: white;"></i>
                      </div>
                      <div>
                        <div style="font-size: 12px; color: rgba(255,255,255,0.8); font-weight: 500; text-transform: uppercase; letter-spacing: 0.5px;">
                          <%= module.testType %> Module
                        </div>
                        <div style="font-size: 14px; color: white; font-weight: 600;">
                          <%= module.code %>
                        </div>
                      </div>
                    </div>
                    <div class="module-status-badge" style="background: <%= module.status === 'active' ? 'rgba(34, 197, 94, 0.9)' : module.status === 'inactive' ? 'rgba(249, 115, 22, 0.9)' : 'rgba(107, 114, 128, 0.9)' %>; color: white; padding: 4px 12px; border-radius: 20px; font-size: 11px; font-weight: 600; text-transform: uppercase;">
                      <%= module.status %>
                    </div>
                  </div>
                </div>

                <!-- Module Body -->
                <div class="module-card-body" style="padding: 20px;">
                  <h3 style="font-size: 18px; font-weight: 700; color: var(--admin-text-light); margin-bottom: 16px; line-height: 1.4;">
                    <%= module.name %>
                  </h3>

                  <!-- Module Stats -->
                  <div style="display: flex; gap: 16px; padding: 12px; background: var(--admin-bg-light); border-radius: 10px; margin-bottom: 16px;">
                    <div style="flex: 1; text-align: center;">
                      <div style="font-size: 20px; font-weight: 700; color: var(--admin-primary);"><%= module.quizCount || 0 %></div>
                      <div style="font-size: 11px; color: var(--admin-text-muted); text-transform: uppercase; font-weight: 500;">Quizzes</div>
                    </div>
                    <div style="flex: 1; text-align: center; border-left: 1px solid var(--admin-border-light);">
                      <div style="font-size: 20px; color: var(--admin-text-muted);">
                        <i class="fas fa-grip-vertical" title="Drag to reorder"></i>
                      </div>
                      <div style="font-size: 11px; color: var(--admin-text-muted); text-transform: uppercase; font-weight: 500;">Drag</div>
                    </div>
                  </div>

                  <!-- Module Actions -->
                  <div style="display: flex; gap: 8px;">
                    <a href="/admin/quiz-modules/<%= module._id %>/edit" class="admin-action-btn primary" style="flex: 1; justify-content: center; padding: 10px; font-size: 13px;">
                      <i class="fas fa-edit"></i>
                      Manage
                    </a>
                    <button type="button" class="admin-action-btn secondary" style="padding: 10px;" onclick="editModule('<%= module._id %>')">
                      <i class="fas fa-cog"></i>
                    </button>
                    <button type="button" class="admin-action-btn danger" style="padding: 10px;" onclick="confirmDeleteModule('<%= module._id %>', '<%= module.name %>')">
                      <i class="fas fa-trash"></i>
                    </button>
                  </div>
                </div>

                <!-- Module Footer -->
                <div style="padding: 12px 20px; background: var(--admin-bg-light); border-top: 1px solid var(--admin-border-light);">
                  <div style="display: flex; justify-content: space-between; align-items: center;">
                    <span style="font-size: 11px; color: var(--admin-text-muted);">
                      <i class="fas fa-calendar-alt" style="margin-right: 4px;"></i>
                      Created <%= new Date(module.createdAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %>
                    </span>
                    <span style="font-size: 11px; color: var(--admin-primary); font-weight: 600;">
                      <i class="fas fa-circle" style="font-size: 8px; margin-right: 4px;"></i>
                      <%= module.testType %>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          <% }); %>
        </div>

        <!-- Pagination -->
        <% if (pagination.totalPages > 1) { %>
          <nav class="admin-pagination">
            <% if (pagination.hasPrev) { %>
              <a href="?page=<%= pagination.prevPage %>&<%= Object.entries(filters).filter(([k,v]) => v).map(([k,v]) => `${k}=${v}`).join('&') %>" class="admin-page-link">
                <i class="fas fa-chevron-left"></i>
              </a>
            <% } %>
            <span class="admin-page-info">Page <%= pagination.currentPage %> of <%= pagination.totalPages %></span>
            <% if (pagination.hasNext) { %>
              <a href="?page=<%= pagination.nextPage %>&<%= Object.entries(filters).filter(([k,v]) => v).map(([k,v]) => `${k}=${v}`).join('&') %>" class="admin-page-link">
                <i class="fas fa-chevron-right"></i>
              </a>
            <% } %>
          </nav>
        <% } %>

      <% } else { %>
        <!-- Empty State -->
        <div class="admin-empty-state" style="text-align: center; padding: 60px 20px; background: var(--admin-card-light); border: 2px solid var(--admin-border-light); border-radius: 16px; margin: 40px 0;">
          <div style="width: 120px; height: 120px; margin: 0 auto 24px; background: linear-gradient(135deg, #6366f1, #8b5cf6); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
            <i class="fas fa-layer-group" style="font-size: 48px; color: white;"></i>
          </div>
          <h3 style="font-size: 24px; font-weight: 700; color: var(--admin-text-light); margin-bottom: 12px;">
            No Modules Found
          </h3>
          <p style="color: var(--admin-text-muted); margin-bottom: 24px; max-width: 400px; margin-left: auto; margin-right: auto;">
            Get started by creating your first quiz module to organize your quizzes better.
          </p>
          <button type="button" class="admin-action-btn primary" onclick="openCreateModuleModal()">
            <i class="fas fa-plus"></i>
            Create Your First Module
          </button>
        </div>
      <% } %>

      <!-- Trash Section -->
      <div id="trashSection" style="display: none; margin-top: 40px;">
        <div class="admin-section-header" style="margin-bottom: 24px;">
          <h3 style="font-size: 20px; font-weight: 700; color: var(--admin-text-light);">
            <i class="fas fa-trash" style="color: #f97316; margin-right: 8px;"></i>
            Deleted Modules
          </h3>
        </div>
        <div id="trashModulesContainer">
          <p style="color: var(--admin-text-muted); text-align: center; padding: 20px;">Loading...</p>
        </div>
      </div>

      <!-- Toggle Trash Button -->
      <div class="text-center mt-4">
        <button class="btn btn-outline-warning" id="toggleTrashBtn" onclick="toggleTrashSection()">
          <i class="fas fa-trash"></i>
          <span id="toggleTrashText">Show Trash</span>
        </button>
      </div>
    </div>
  </main>
</div>

<!-- Create/Edit Module Modal -->
<div class="modal fade" id="moduleModal" tabindex="-1" aria-labelledby="moduleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content admin-modal-content">
      <div class="modal-header" style="border-bottom: 1px solid var(--admin-border-light);">
        <h5 class="modal-title" id="moduleModalLabel">
          <i class="fas fa-layer-group" style="margin-right: 8px; color: var(--admin-primary);"></i>
          Create New Module
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" style="padding: 24px;">
        <form id="moduleForm">
          <input type="hidden" id="moduleId" name="moduleId" value="">
          
          <div class="mb-3">
            <label class="form-label" style="font-weight: 600; color: var(--admin-text-light);">
              <i class="fas fa-heading" style="margin-right: 6px; color: var(--admin-primary);"></i>
              Module Name *
            </label>
            <input type="text" class="form-control" id="moduleName" name="name" required maxlength="100" placeholder="e.g., Math Fundamentals">
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <label class="form-label" style="font-weight: 600; color: var(--admin-text-light);">
                <i class="fas fa-clipboard-check" style="margin-right: 6px; color: var(--admin-primary);"></i>
                Test Type *
              </label>
              <select class="form-select" id="moduleTestType" name="testType" required>
                <option value="">Select Type</option>
                <option value="EST">EST</option>
                <option value="SAT">SAT</option>
                <option value="ACT">ACT</option>
              </select>
            </div>
            <div class="col-md-6 mb-3">
              <label class="form-label" style="font-weight: 600; color: var(--admin-text-light);">
                <i class="fas fa-toggle-on" style="margin-right: 6px; color: var(--admin-primary);"></i>
                Status
              </label>
              <select class="form-select" id="moduleStatus" name="status">
                <option value="active">Active</option>
                <option value="inactive">Inactive</option>
                <option value="archived">Archived</option>
              </select>
            </div>
          </div>

        </form>
      </div>
      <div class="modal-footer" style="border-top: 1px solid var(--admin-border-light);">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" onclick="saveModule()">
          <i class="fas fa-save" style="margin-right: 6px;"></i>
          Save Module
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModuleModal" tabindex="-1" aria-labelledby="deleteModuleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content admin-modal-content">
      <div class="modal-header" style="border-bottom: 1px solid var(--admin-border-light);">
        <h5 class="modal-title" id="deleteModuleModalLabel">
          <i class="fas fa-exclamation-triangle" style="margin-right: 8px; color: #ef4444;"></i>
          Delete Module
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete the module "<strong id="deleteModuleName"></strong>"?</p>
        <p class="text-muted mb-0">
          <i class="fas fa-info-circle"></i>
          All quizzes in this module will be unassigned but not deleted.
        </p>
      </div>
      <div class="modal-footer" style="border-top: 1px solid var(--admin-border-light);">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" id="confirmDeleteModuleBtn">
          <i class="fas fa-trash" style="margin-right: 6px;"></i>
          Delete Module
        </button>
      </div>
    </div>
  </div>
</div>

