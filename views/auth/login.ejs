<%- include('../partials/header') %>

<!-- Flash messages are now handled in the header partial -->

<!-- Modern Split-Screen Auth Layout -->
<div class="auth-container-modern">
  <!-- Left Side - Branding & Visual -->
  <div class="auth-visual-section">
    <div class="auth-visual-overlay"></div>
    <div class="auth-particles" id="auth-particles"></div>
    
    <!-- Floating Math Elements -->
    <div class="math-shape-auth auth-shape1 floating-element"></div>
    <div class="math-shape-auth auth-shape2 floating-element"></div>
    <div class="math-shape-auth auth-shape3 floating-element"></div>
    <div class="math-shape-auth auth-shape4 floating-element"></div>
    
    <!-- Brand Content -->
    <div class="auth-brand-content">
      <div class="auth-logo-container">
        <div class="auth-logo-icon">
          <i class="fas fa-calculator"></i>
        </div>
        <h1 class="auth-brand-title">Elkably</h1>
        <p class="auth-brand-subtitle">Mathematics Excellence</p>
      </div>
      
      <div class="auth-features">
        <div class="auth-feature-item" data-aos="fade-right" data-aos-delay="100">
          <i class="fas fa-graduation-cap"></i>
          <span>Expert Tutoring</span>
        </div>
        <div class="auth-feature-item" data-aos="fade-right" data-aos-delay="200">
          <i class="fas fa-chart-line"></i>
          <span>Progress Tracking</span>
        </div>
        <div class="auth-feature-item" data-aos="fade-right" data-aos-delay="300">
          <i class="fas fa-users"></i>
          <span>Community Learning</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Right Side - Login Form -->
  <div class="auth-form-section">
    <div class="auth-form-container">
      <!-- Header -->
      <div class="auth-form-header">
        <h2 class="auth-form-title">
          <i class="fas fa-sign-in-alt me-2"></i>
          Welcome Back
        </h2>
        <p class="auth-form-subtitle">Sign in to continue your math journey</p>
      </div>

      <!-- Display Errors -->
      <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
      <div class="alert alert-danger auth-alert" role="alert" id="errorAlert">
        <div class="d-flex align-items-center">
          <i class="fas fa-exclamation-triangle me-2"></i>
          <strong>Login Failed!</strong>
        </div>
        <hr class="my-2">
        <ul class="mb-0">
          <% errors.forEach(function(error) { %>
          <li data-field="<%= error.field || '' %>"><%= error.msg %></li>
          <% }); %>
        </ul>
      </div>
      <script>
        // Highlight fields with errors when the page loads
        document.addEventListener('DOMContentLoaded', function() {
          const errorItems = document.querySelectorAll('#errorAlert li[data-field]');
          errorItems.forEach(item => {
            const fieldName = item.getAttribute('data-field');
            if (fieldName) {
              const field = document.getElementById(fieldName);
              if (field) {
                field.classList.add('is-invalid');
                field.classList.add('field-with-error');
                
                // Focus on first field with error
                if (field === document.querySelector('.field-with-error')) {
                  setTimeout(() => {
                    field.focus();
                  }, 500);
                }
              }
            }
          });
          
          // Add animation to error alert
          const errorAlert = document.getElementById('errorAlert');
          if (errorAlert) {
            errorAlert.style.animation = 'shake 0.5s ease-in-out';
          }
        });
      </script>
      <% } %>

      <!-- Login Form -->
      <form action="/auth/login" method="POST" class="auth-form">
        <div class="form-group-modern">
          <label for="email" class="form-label-modern">
            <i class="fas fa-user form-label-icon"></i>
            Email, Phone Number, or Username
          </label>
          <div class="input-group-modern">
            <input type="text" id="email" name="email" class="form-control-modern" 
                   placeholder="Enter your email, phone number, or username" 
                   value="<%= typeof email != 'undefined' ? email : '' %>" 
                   autocomplete="username" required>
            <div class="input-focus-line"></div>
          </div>
          <div class="form-text-modern">You can login with your email address, phone number, or username.</div>
        </div>

        <div class="form-group-modern">
          <label for="password" class="form-label-modern">
            <i class="fas fa-lock form-label-icon"></i>
            Password
          </label>
          <div class="input-group-modern">
            <input type="password" id="password" name="password" class="form-control-modern" 
                   placeholder="Enter your password" 
                   autocomplete="current-password" required>
            <button class="btn-toggle-password" type="button" id="togglePassword">
              <i class="fas fa-eye"></i>
            </button>
            <div class="input-focus-line"></div>
          </div>
        </div>

        <div class="form-options">
          <div class="form-check-modern">
            <input type="checkbox" class="form-check-input-modern" id="rememberMe" name="rememberMe" value="true">
            <label class="form-check-label-modern" for="rememberMe">
              Remember me for 30 days
            </label>
          </div>
          <a href="#" class="forgot-password-link">Forgot Password?</a>
        </div>

        <button type="submit" class="btn-auth-primary">
          <span class="btn-text">Sign In</span>
          <i class="fas fa-arrow-right btn-icon"></i>
          <div class="btn-ripple"></div>
        </button>
      </form>

      <!-- Footer -->
      <div class="auth-form-footer">
        <p>Don't have an account? 
          <a href="/auth/register" class="auth-link-modern">
            <span>Create Account</span>
            <i class="fas fa-arrow-right"></i>
          </a>
        </p>
      </div>
    </div>
  </div>
</div>

<!-- Theme Manager -->
<script src="/js/theme-manager.js"></script>

<!-- Auth Common JavaScript -->
<script src="/js/auth-common.js"></script>

<!-- Auth Animations -->
<script src="/js/auth-animations.js"></script>

<!-- Login Checkbox Styling -->
<style>
/* Error animation */
@keyframes shake {
  0%, 100% { transform: translateX(0); }
  10%, 30%, 50%, 70%, 90% { transform: translateX(-5px); }
  20%, 40%, 60%, 80% { transform: translateX(5px); }
}

/* Field error highlighting */
.field-with-error {
  border-color: #dc3545 !important;
  box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.25) !important;
  animation: shake 0.5s ease-in-out;
}

.field-with-error + .input-focus-line {
  background-color: #dc3545 !important;
}

/* Error alert enhancements */
#errorAlert {
  border-left: 4px solid #dc3545;
  box-shadow: 0 4px 12px rgba(220, 53, 69, 0.15);
}

/* Remember Me Checkbox Styling */
.form-options {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20px 0;
  flex-wrap: wrap;
  gap: 10px;
}

.form-check-modern {
  display: flex;
  align-items: center;
  gap: 10px;
  margin: 0;
  padding: 0;
  background: none;
  border: none;
}

.form-check-input-modern {
  width: 18px;
  height: 18px;
  margin: 0;
  cursor: pointer;
  accent-color: #dc2626;
  border-radius: 4px;
  border: 2px solid #d1d5db;
  background-color: #fff;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.form-check-input-modern:checked {
  background-color: #dc2626;
  border-color: #dc2626;
}

.form-check-input-modern:focus {
  outline: none;
  box-shadow: 0 0 0 3px rgba(220, 38, 38, 0.1);
}

.form-check-label-modern {
  font-size: 14px;
  line-height: 1.4;
  color: #374151;
  cursor: pointer;
  margin: 0;
  font-weight: 500;
}

.forgot-password-link {
  color: #dc2626;
  text-decoration: none;
  font-size: 14px;
  font-weight: 500;
  transition: color 0.3s ease;
}

.forgot-password-link:hover {
  color: #b91c1c;
  text-decoration: underline;
}

/* Dark theme support for checkbox */
.dark-theme .form-check-input-modern {
  background-color: #1f2937;
  border-color: #6b7280;
}

.dark-theme .form-check-input-modern:checked {
  background-color: #ef4444;
  border-color: #ef4444;
}

.dark-theme .form-check-input-modern:focus {
  box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1);
}

.dark-theme .form-check-label-modern {
  color: #d1d5db;
}

.dark-theme .forgot-password-link {
  color: #ef4444;
}

.dark-theme .forgot-password-link:hover {
  color: #fca5a5;
}

/* Responsive design for checkbox */
@media (max-width: 768px) {
  .form-options {
    flex-direction: column;
    align-items: flex-start;
    gap: 15px;
  }
  
  .form-check-modern {
    gap: 8px;
  }
  
  .form-check-input-modern {
    width: 16px;
    height: 16px;
  }
  
  .form-check-label-modern {
    font-size: 13px;
  }
  
  .forgot-password-link {
    font-size: 13px;
  }
}
</style>

<!-- Login Form JavaScript -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  const loginForm = document.querySelector('.auth-form');
  const submitBtn = document.querySelector('.btn-auth-primary');
  const rememberMeCheckbox = document.getElementById('rememberMe');

  // Handle form submission with loading state
  if (loginForm) {
    loginForm.addEventListener('submit', function(e) {
      // Get form data for validation
      const email = document.getElementById('email').value.trim();
      const password = document.getElementById('password').value;

      // Basic validation
      if (!email || !password) {
        e.preventDefault();
        showError('Please fill in all required fields');
        return false;
      }

      // Show loading state
      setLoadingState(true);
      
      // Add a hidden field to track submission attempts
      const submissionIdField = document.createElement('input');
      submissionIdField.type = 'hidden';
      submissionIdField.name = 'submissionId';
      submissionIdField.value = Date.now().toString();
      loginForm.appendChild(submissionIdField);
      
      // Allow form to submit naturally
      return true;
    });
  }
  
  // Reset loading state when page loads (in case of errors)
  window.addEventListener('load', function() {
    if (submitBtn && submitBtn.disabled) {
      setLoadingState(false);
    }
  });

  // Handle remember me checkbox change
  if (rememberMeCheckbox) {
    rememberMeCheckbox.addEventListener('change', function() {
      console.log('Remember me:', this.checked);
    });
  }

  function showError(message) {
    // Create error message element
    const errorDiv = document.createElement('div');
    errorDiv.className = 'alert alert-danger auth-alert';
    errorDiv.innerHTML = `
      <div class="d-flex align-items-center">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <strong>Login Failed!</strong>
      </div>
      <hr class="my-2">
      <p class="mb-0">${message}</p>
    `;

    // Insert before form
    const formContainer = document.querySelector('.auth-form-container');
    if (formContainer) {
      const existingAlert = formContainer.querySelector('.alert');
      if (existingAlert) {
        existingAlert.remove();
      }
      formContainer.insertBefore(errorDiv, formContainer.firstChild);
      
      // Scroll to error
      errorDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }
  }

  function setLoadingState(loading) {
    if (submitBtn) {
      if (loading) {
        submitBtn.disabled = true;
        submitBtn.innerHTML = `
          <span class="btn-text">Signing In...</span>
          <i class="fas fa-spinner fa-spin btn-icon"></i>
          <div class="btn-ripple"></div>
        `;
      } else {
        submitBtn.disabled = false;
        submitBtn.innerHTML = `
          <span class="btn-text">Sign In</span>
          <i class="fas fa-arrow-right btn-icon"></i>
          <div class="btn-ripple"></div>
        `;
      }
    }
  }

  // Auto-focus on email field
  const emailInput = document.getElementById('email');
  if (emailInput) {
    emailInput.focus();
  }
});
</script>

