    height: 120px;
    top: 70%;
    right: 10%;
    animation-delay: 5s;
  }

  .shape-3 {
    width: 60px;
    height: 60px;
    top: 30%;
    right: 20%;
    animation-delay: 10s;
  }

  .shape-4 {
    width: 100px;
    height: 100px;
    bottom: 20%;
    left: 15%;
    animation-delay: 15s;
  }

  @keyframes rotate {
    from { transform: rotate(0deg); }
