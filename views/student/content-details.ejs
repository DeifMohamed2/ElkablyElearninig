            <!-- Meeting Ended -->
            <div class="meeting-ended-section">
              <div class="ended-icon">
                <i class="fas fa-check-circle"></i>
              </div>
              <h5>Meeting Has Ended</h5>
              <p>This live session took place on:</p>
