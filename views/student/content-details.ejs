                <div class="meta-item">
                  <i class="far fa-calendar"></i>
                  <span><%= new Date(zoomMeeting.scheduledStartTime).toLocaleDateString() %></span>
                </div>
                <div class="meta-item">
                  <i class="far fa-clock"></i>
                  <span><%= new Date(zoomMeeting.scheduledStartTime).toLocaleTimeString() %></span>
                </div>
