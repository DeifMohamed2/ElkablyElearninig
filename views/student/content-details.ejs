            <!-- Meeting Active (Can Join) -->
            <div class="meeting-active-section">
              <div class="active-pulse">
                <i class="fas fa-circle"></i>
              </div>
              <h5>Live Session in Progress</h5>
              <p>Join the live Zoom session now!</p>

              <div class="join-options mt-4">
