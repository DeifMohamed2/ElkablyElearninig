    }

    .dark-theme .alert-warning {
      background: #1f2937;
      border-color: #dc2626;
      color: #dc2626;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .meeting-meta {
        flex-direction: column;
        gap: 10px;
      }

      .meta-item {
        justify-content: center;
      }

      .join-options {
        flex-direction: column;
      }

      .join-options .btn {
        width: 100%;
        margin-bottom: 10px;
      }

      .meeting-title {
        font-size: 24px;
      }

      .locked-icon,
      .active-pulse,
      .ended-icon {
        font-size: 48px;
      }
    }

