    // Calculate score - Following exact rules
    function calculateScore() {
      const exam1 = parseFloat(exam1Input?.value) || 0;
      const exam2 = parseFloat(exam2Input?.value) || 0;
      const gpa = parseFloat(gpaInput?.value) || 0;

      if (!selectedUniversityType || !selectedExamType || exam1 === 0 || gpa === 0) {
        calculationData.finalScore = 0;
        calculationData.breakdown = {
          exam1Score: 0,
          exam2Score: 0,
          gpaScore: 0
        };
        if (calculatedValue) calculatedValue.textContent = '0.00';
        return;
      }

      let finalScore = 0;
      let exam1Score = 0;
      let exam2Score = 0;
      const uniType = selectedUniversityType;
      const isPublic = uniType === 'government';
      const isPrivate = uniType === 'private' || uniType === 'ahlia';

      // Calculate Exam 1 Score (EST 1, SAT 1, or ACT 1)
      // Handle ACT conversion first (ACT is out of 36, convert to 1600 scale)
      let exam1Normalized = exam1;
      if (selectedExamType === 'ACT') {
        // Convert ACT score (0-36) to EST/SAT scale (0-1600)
        // ACT 36 = 1600, so conversion: (ACT / 36) * 1600
        exam1Normalized = (exam1 / 36) * 1600;
      }
      
      // Rules:
      // Public University: if >= 1090 then score * 69 / 1600, else score * 60 / 1600
      // Private/Ahlia University: if >= 1090 then score * 75 / 1600, else score * 60 / 1600
      if (isPublic) {
        // Public University rules
        if (exam1Normalized >= 1090) {
          exam1Score = exam1Normalized * (69 / 1600);
        } else {
          exam1Score = exam1Normalized * (60 / 1600);
        }
      } else if (isPrivate) {
        // Private or Ahlia University rules
        if (exam1Normalized >= 1090) {
          exam1Score = exam1Normalized * (75 / 1600);
        } else {
          exam1Score = exam1Normalized * (60 / 1600);
        }
      }

      finalScore += exam1Score;

      // Calculate Exam 2 Score (EST 2, ACT 2, or SAT 2)
      // Rule: Score * 15 / 1600 (same for all university types)
      if (selectedExam2Type && selectedExam2Type !== 'NONE' && exam2 > 0) {
        // Handle ACT conversion (ACT is out of 36, convert to 1600 scale)
        let exam2Normalized = exam2;
        if (selectedExam2Type === 'ACT') {
          // Convert ACT score (0-36) to EST/SAT scale (0-1600)
          // ACT 36 = 1600, so conversion: (ACT / 36) * 1600
          exam2Normalized = (exam2 / 36) * 1600;
        }
        exam2Score = exam2Normalized * (15 / 1600);
        finalScore += exam2Score;
      }

      // Calculate GPA Score
      // Rule: GPA * 10 (same for all university types)
      const gpaScore = gpa * 10;
      finalScore += gpaScore;

      // Final Score = Score1 + Score2 + (GPA * 10)
      
      // Save calculation data
      calculationData.exam1 = exam1;
      calculationData.exam2 = exam2;
      calculationData.gpa = gpa;
      calculationData.breakdown.exam1Score = exam1Score;
      calculationData.breakdown.exam2Score = exam2Score;
      calculationData.breakdown.gpaScore = gpaScore;
      calculationData.finalScore = finalScore;

      // Display rounded to 2 decimals
      if (calculatedValue) {
        calculatedValue.textContent = finalScore.toFixed(2);
      }
    }


