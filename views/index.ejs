    cartContinue.addEventListener('click', hideCartSidebar);

    // Checkout button
    cartCheckout.addEventListener('click', function() {
      if (cart.length > 0) {
        // Here you would integrate with your payment system
        alert('Checkout functionality would be implemented here!');
      }
    });

    // Close cart on escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && cartSidebar.classList.contains('cart-sidebar-open')) {
        hideCartSidebar();
      }
    });
  });

  // Optimized Elkably Team Carousel Functionality
  document.addEventListener('DOMContentLoaded', function() {
    // Team member data from server
    const teamMembers = <%- JSON.stringify(teamMembers || []) %>;
    
    if (teamMembers.length === 0) {
      return;
    }
    
    let currentMemberIndex = 0;
    const totalMembers = teamMembers.length;
    let autoPlayInterval;
    let isTransitioning = false;

    // Get DOM elements with caching
    const prevBtn = document.getElementById('teamCarouselPrev');
    const nextBtn = document.getElementById('teamCarouselNext');
    const indicators = document.querySelectorAll('.team-carousel-indicators .indicator');
    const carouselContainer = document.querySelector('.team-carousel-container');
    const allCards = document.querySelectorAll('.team-member-card');

    // Optimized function to show specific team member
    function showMember(index) {
      if (isTransitioning || index === currentMemberIndex) return;
      
      isTransitioning = true;
      
      // Use CSS classes for better performance
      allCards.forEach(card => {
        card.classList.remove('active');
      });
      
      // Show the selected card
      const selectedCard = document.querySelector(`[data-index="${index}"]`);
      if (selectedCard) {
        selectedCard.classList.add('active');
      }
      
      // Update indicators with CSS classes
      indicators.forEach((indicator, i) => {
        indicator.classList.toggle('active', i === index);
      });
      
      // Update navigation buttons with CSS classes
      if (prevBtn) {
        prevBtn.classList.toggle('disabled', index === 0);
      }
      
      if (nextBtn) {
        nextBtn.classList.toggle('disabled', index === totalMembers - 1);
      }
      
      currentMemberIndex = index;
      
      // Reset transition flag
      requestAnimationFrame(() => {
        isTransitioning = false;
      });
    }

    // Throttled navigation functions
    const nextMember = () => {
      if (totalMembers <= 1 || isTransitioning) return;
      const nextIndex = (currentMemberIndex + 1) % totalMembers;
      showMember(nextIndex);
    };

    const prevMember = () => {
      if (totalMembers <= 1 || isTransitioning) return;
      const prevIndex = (currentMemberIndex - 1 + totalMembers) % totalMembers;
      showMember(prevIndex);
    };

    // Auto-play functionality with visibility check
    function startAutoPlay() {
      if (totalMembers <= 1) return;
      stopAutoPlay();
      autoPlayInterval = setInterval(() => {
        // Only auto-play if page is visible
        if (!document.hidden) {
          nextMember();
        }
      }, 3000);
    }

    function stopAutoPlay() {
      if (autoPlayInterval) {
        clearInterval(autoPlayInterval);
        autoPlayInterval = null;
      }
    }

    // Initialize carousel
    function initCarousel() {
      if (totalMembers <= 1) {
        // Hide navigation if only one or no members
        if (prevBtn) prevBtn.style.display = 'none';
        if (nextBtn) nextBtn.style.display = 'none';
        if (document.getElementById('teamCarouselIndicators')) {
          document.getElementById('teamCarouselIndicators').style.display = 'none';
        }
        return;
      }

      // Show first member
      showMember(0);
    }

    // Event listeners with passive options for better performance
    if (nextBtn) {
      nextBtn.addEventListener('click', nextMember, { passive: true });
    }

    if (prevBtn) {
