<script>
  // Optimized Brilliant Students Slider Functionality
  document.addEventListener('DOMContentLoaded', function() {
    const sliders = document.querySelectorAll('.students-slider-new');

    // Use requestAnimationFrame for smooth animations
    const animateSlider = (slides, translateX) => {
      requestAnimationFrame(() => {
        slides.style.transform = `translate3d(${translateX}px, 0, 0)`;
      });
    };

    sliders.forEach(slider => {
      const slides = slider.querySelector('.students-slides-new');
      const prevBtn = slider.querySelector('.slider-arrow-prev');
      const nextBtn = slider.querySelector('.slider-arrow-next');

      if (!slides || !prevBtn || !nextBtn) return;

      let currentIndex = 0;
      const cards = slides.querySelectorAll('.student-card-new');
      const totalCards = cards.length;

      // Get the pagination container for this slider
      const sliderId = slider.closest('.brilliant-students-new').id;
      const pagination = document.getElementById(`pagination-${sliderId.split('-').pop()}`);

      // Cache DOM elements and calculations
      let cachedCardWidth = 420;
      let cachedVisibleCards = 1;
      let isAnimating = false;

      // Function to get visible cards count based on screen size
      function getVisibleCardsCount() {
        const sliderWidth = slider.offsetWidth;
        const cardWidth = 400; // Base card width from CSS
        const gap = 20; // Gap between cards
        const visibleCount = Math.floor((sliderWidth + gap) / (cardWidth + gap));
        return Math.max(1, visibleCount); // Ensure at least 1 card is visible
      }

      function updateSlider() {
        if (totalCards === 0 || isAnimating) return;

        isAnimating = true;
        
        // Use cached values when possible
        if (cachedVisibleCards === 1) {
          cachedVisibleCards = getVisibleCardsCount();
        }
        
        const maxIndex = Math.max(0, totalCards - cachedVisibleCards);
        const clampedIndex = Math.min(currentIndex, maxIndex);

        if (currentIndex !== clampedIndex) {
          currentIndex = clampedIndex;
        }

        // Use cached card width
        const translateX = -currentIndex * cachedCardWidth;
        animateSlider(slides, translateX);

        // Update arrow states with CSS classes for better performance
        const prevDisabled = currentIndex === 0;
        const nextDisabled = currentIndex >= maxIndex;
        
        prevBtn.classList.toggle('disabled', prevDisabled);
        nextBtn.classList.toggle('disabled', nextDisabled);

        // Update pagination dots
        if (pagination) {
          const dots = pagination.querySelectorAll('.pagination-dot');
          dots.forEach((dot, index) => {
            dot.classList.toggle('active', index === currentIndex);
          });
        }

        // Reset animation flag
        requestAnimationFrame(() => {
          isAnimating = false;
        });
      }

      // Throttled event handlers
      const handlePrevClick = () => {
        if (currentIndex > 0 && !isAnimating) {
          currentIndex--;
          updateSlider();
        }
      };

      const handleNextClick = () => {
        const maxIndex = Math.max(0, totalCards - cachedVisibleCards);
        if (currentIndex < maxIndex && !isAnimating) {
          currentIndex++;
          updateSlider();
        }
      };

      prevBtn.addEventListener('click', handlePrevClick);
      nextBtn.addEventListener('click', handleNextClick);

      // Pagination dot clicks
      if (pagination) {
        const dots = pagination.querySelectorAll('.pagination-dot');
        dots.forEach((dot, index) => {
          dot.addEventListener('click', () => {
            if (!isAnimating) {
              currentIndex = index;
              updateSlider();
            }
          });
        });
      }

      // Initialize with intersection observer for better performance
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            // Calculate card width when slider becomes visible
            if (cards[0] && cards[0].offsetWidth > 0) {
              cachedCardWidth = cards[0].offsetWidth + 20;
            }
            cachedVisibleCards = getVisibleCardsCount();
            updateSlider();
          }
        });
      }, { threshold: 0.1 });

      observer.observe(slider);

      // Additional initialization check
      if (totalCards <= 1) {
        // Hide navigation if only one or no cards
        prevBtn.style.display = 'none';
        nextBtn.style.display = 'none';
        if (pagination) {
          pagination.style.display = 'none';
        }
      }

      // Throttled window resize handler
      let resizeTimeout;
      const handleResize = () => {
        clearTimeout(resizeTimeout);
        resizeTimeout = setTimeout(() => {
          cachedVisibleCards = getVisibleCardsCount();
          if (cards[0] && cards[0].offsetWidth > 0) {
            cachedCardWidth = cards[0].offsetWidth + 20;
          }
          updateSlider();
        }, 150);
      };

      window.addEventListener('resize', handleResize, { passive: true });
    });
  });
</script>



