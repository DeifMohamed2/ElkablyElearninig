      nextBtn.addEventListener('click', nextMember, { passive: true });
    }

    if (prevBtn) {
      prevBtn.addEventListener('click', prevMember, { passive: true });
    }

    // Dot clicks
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        if (!isTransitioning) {
          showMember(index);
        }
      }, { passive: true });
    });

    // Keyboard navigation with focus check
