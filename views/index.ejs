      if (carouselContainer && carouselContainer.contains(document.activeElement)) {
        if (e.key === 'ArrowLeft') {
          e.preventDefault();
          prevMember();
        } else if (e.key === 'ArrowRight') {
          e.preventDefault();
          nextMember();
        }
