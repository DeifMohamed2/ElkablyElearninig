  <script>
    function toggleUserDropdown(event) {
      event.preventDefault();
      event.stopPropagation();
      
      console.log('toggleUserDropdown called');
      
      const dropdown = document.querySelector('.user-account-dropdown');
      const menu = document.querySelector('.user-dropdown-menu');
      const button = document.getElementById('userDropdown');
      
      console.log('Elements found:', { 
        dropdown: !!dropdown, 
        menu: !!menu, 
        button: !!button,
        dropdownClass: dropdown ? dropdown.className : 'not found',
        menuStyle: menu ? menu.style.display : 'not found'
      });
      
      if (!dropdown || !menu || !button) {
        console.log('Required elements not found');
        return;
      }
      
      const isOpen = dropdown.classList.contains('show');
      console.log('Current state - isOpen:', isOpen);
      
      if (isOpen) {
        // Close dropdown
        dropdown.classList.remove('show');
        button.setAttribute('aria-expanded', 'false');
        menu.style.opacity = '0';
        menu.style.visibility = 'hidden';
        menu.style.transform = 'translateY(-20px) scale(0.95)';
        menu.style.pointerEvents = 'none';
        document.body.classList.remove('dropdown-open');
        console.log('Dropdown closed');
      } else {
        // Open dropdown
        dropdown.classList.add('show');
        button.setAttribute('aria-expanded', 'true');
        menu.style.opacity = '1';
        menu.style.visibility = 'visible';
        menu.style.transform = 'translateY(0) scale(1)';
        menu.style.pointerEvents = 'auto';
        document.body.classList.add('dropdown-open');
        console.log('Dropdown opened - classes:', dropdown.className);
      }
    }
    
    // Test function to check if elements exist
    function testDropdownElements() {
      console.log('Testing dropdown elements...');
      const dropdown = document.querySelector('.user-account-dropdown');
      const menu = document.querySelector('.user-dropdown-menu');
      const button = document.getElementById('userDropdown');
      
      console.log('Dropdown element:', dropdown);
      console.log('Menu element:', menu);
      console.log('Button element:', button);
      
      // Only proceed if user is authenticated and elements exist
      if (!dropdown || !menu || !button) {
        console.log('User dropdown elements not found - user may not be authenticated');
        return;
      }
      
      if (menu) {
        console.log('Menu styles:', {
          position: getComputedStyle(menu).position,
          display: getComputedStyle(menu).display,
          opacity: getComputedStyle(menu).opacity,
          visibility: getComputedStyle(menu).visibility,
          zIndex: getComputedStyle(menu).zIndex
        });
      }
    }
    
    // Run test when DOM is ready
    document.addEventListener('DOMContentLoaded', function() {
      setTimeout(testDropdownElements, 1000);
    });
    
    // Close dropdown when clicking outside
    document.addEventListener('click', function(e) {
      const dropdown = document.querySelector('.user-account-dropdown');
      if (dropdown && !dropdown.contains(e.target)) {
        dropdown.classList.remove('show');
        const button = document.getElementById('userDropdown');
        const menu = document.querySelector('.user-dropdown-menu');
        if (button) button.setAttribute('aria-expanded', 'false');
        if (menu) {
          menu.style.opacity = '0';
          menu.style.visibility = 'hidden';
          menu.style.transform = 'translateY(-20px) scale(0.95)';
          menu.style.pointerEvents = 'none';
        }
        document.body.classList.remove('dropdown-open');
      }
    });
    
    // Close dropdown on escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        const dropdown = document.querySelector('.user-account-dropdown');
        if (dropdown && dropdown.classList.contains('show')) {
          dropdown.classList.remove('show');
          const button = document.getElementById('userDropdown');
          const menu = document.querySelector('.user-dropdown-menu');
          if (button) button.setAttribute('aria-expanded', 'false');
          if (menu) {
            menu.style.opacity = '0';
            menu.style.visibility = 'hidden';
            menu.style.transform = 'translateY(-20px) scale(0.95)';
            menu.style.pointerEvents = 'none';
          }
          document.body.classList.remove('dropdown-open');
        }
      }
    });
  </script>

